<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.justbyheart.vocabulary.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_navigation_search"
            app:destination="@id/navigation_search" />
        <action
            android:id="@+id/action_homeFragment_to_libraryFragment"
            app:destination="@id/libraryFragment" />
        <action
            android:id="@+id/action_homeFragment_to_todayWordsFragment"
            app:destination="@id/todayWordsFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_study"
        android:name="com.justbyheart.vocabulary.ui.study.StudyFragment"
        android:label="@string/title_study"
        tools:layout="@layout/fragment_study" >
        <action
            android:id="@+id/action_studyFragment_to_testFragment"
            app:destination="@id/testFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_review"
        android:name="com.justbyheart.vocabulary.ui.review.ReviewFragment"
        android:label="@string/title_review"
        tools:layout="@layout/fragment_review" >
        <action
            android:id="@+id/action_reviewFragment_to_wordDisplayFragment"
            app:destination="@id/wordCardDisplayFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_favorites"
        android:name="com.justbyheart.vocabulary.ui.favorites.FavoritesFragment"
        android:label="@string/title_favorites"
        tools:layout="@layout/fragment_favorites" >
        <action
            android:id="@+id/action_favoritesFragment_to_wordDisplayFragment"
            app:destination="@id/wordCardDisplayFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.justbyheart.vocabulary.ui.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/testFragment"
        android:name="com.justbyheart.vocabulary.ui.test.TestFragment"
        android:label="@string/title_test"
        tools:layout="@layout/fragment_test" >
        <argument
            android:name="wordIds"
            app:argType="long[]" />
    </fragment>

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.justbyheart.vocabulary.ui.search.SearchFragment"
        android:label="搜索"
        tools:layout="@layout/fragment_search" >
        <argument
            android:name="query"
            app:argType="string"
            android:defaultValue="" />
        <action
            android:id="@+id/action_navigation_search_to_wordCardDisplayFragment"
            app:destination="@id/wordCardDisplayFragment" />
    </fragment>

    <fragment
        android:id="@+id/wordCardDisplayFragment"
        android:name="com.justbyheart.vocabulary.ui.worddisplay.WordDisplayFragment"
        android:label="单词详情"
        tools:layout="@layout/fragment_word_display" >
        <argument
            android:name="wordId"
            app:argType="long" />
    </fragment>

    <fragment
        android:id="@+id/libraryFragment"
        android:name="com.justbyheart.vocabulary.ui.library.LibraryFragment"
        android:label="词库"
        tools:layout="@layout/fragment_library" >
        <action
            android:id="@+id/action_libraryFragment_to_wordDisplayFragment"
            app:destination="@id/wordCardDisplayFragment" />
    </fragment>

    <fragment
        android:id="@+id/todayWordsFragment"
        android:name="com.justbyheart.vocabulary.ui.home.TodayWordsFragment"
        android:label="今日单词"
        tools:layout="@layout/fragment_today_words" >
        <action
            android:id="@+id/action_todayWordsFragment_to_wordDisplayFragment"
            app:destination="@id/wordCardDisplayFragment" />
        <argument
            android:name="wordIds"
            app:argType="long[]" />
    </fragment>

</navigation>